<%= simple_form_for [:admin, @user] do |form| %>
<div class="container">
  <div class="row mt-4">
    <div class="card">
      <div class="card-header">
        <h3 class="text-center font-weight-light my-4">Evento</h3>
      </div>
      <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-6">
              <%= form.input :email %>
            </div>
            <div class="col-12 col-md-6">
              <%= form.input :password %>
            </div>
            <div class="col-12 col-md-6">
              <%= form.input :password_confirmation %>
            </div>
            <div class="col-12 col-md-6">
              <%= form.input :role, collection: { 'Registrado': 'registered',
                                                    'Dono do Evento': 'manager',
                                                    'Administrador': 'admin' },
                                                    include_blank: false %>
            </div>
          </div>
      </div>
      <div class="card-footer d-flex justify-content-around">
          <%= link_to 'voltar' , admin_users_path, class: 'btn btn-secondary' %>
          <%= form.button :button, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>