<div class="card mt-3">
  <div class="card-body">
      <div class="card-body d-flex justify-content-between">
          <span> <%= event.id %> </span>
          <span> <%= event.name %> </span>
          <span> <%= event.local %> </span>
          <span> <%= event.period_start %> </span>
          <span> <%= event.period_end %> </span>
          <span> <%= event.user.email %> </span>
      </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <%= link_to event_path(event), class: 'btn btn-info' do %>
    <i class="bi bi-eye"></i>
    <% end %>
  </div>
</div>