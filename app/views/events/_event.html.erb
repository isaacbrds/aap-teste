<div class="card mt-3">
  <div class="card-body">
      <div class="card-body d-flex justify-content-between">
          <span> <%= event.id %> </span>
          <span> <%= event.name %> </span>
          <span> <%= event.local %> </span>
          <span> <%= event.period_start %> </span>
          <span> <%= event.period_end %> </span>
          <span> <%= event.user.email %> </span>
      </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <%= link_to 'Detalhes', event_path(event), class: 'btn btn-info' %>
    <% if current_user %>
      <% unless ( event.registrations.exists?(user: current_user) || event.user == current_user) %>
        <%= simple_form_for [event, @registration] do |form| %>
          <%= form.submit 'Inscrever', class: 'btn btn-success' %>
        <% end %>
      <% else %>
        <a href="#"><h4 class="mt-2 text-success"><i class="bi bi-check-lg "></i></h4></a>
        <%= link_to 'Cancelar Inscrição', event_registration_path(current_user, event.id)\
                    , data: { turbo_confirm: 'Você tem certeza?', turbo_method: :delete }\
                    , class: 'btn btn-danger' %>
      <% end %>
    <% end %>
    <%= link_to 'Editar', edit_event_path(event), class: 'btn btn-warning' %>
  </div>
</div>