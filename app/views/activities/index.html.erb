<div class="container">
  <div class="row mt-4">
    <div class="d-flex">
      <div class="flex-grow-1">
        <h3>Atividades do Evento <%= @event.name %></h3>
        <p></p>
      </div>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Título</th>
          <th scope="col">Palestrante</th>
          <th scope="col">Local</th>
          <th scope="col">Horas de Certificado</th>
          <th scope="col">Data de Início</th>
          <th scope="col">Inscrições Abertas</th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.name %></td>
            <td><%= activity.title %></td>
            <td><%= activity.speaker %></td>
            <td><%= activity.local %></td>
            <td><%= activity.certificate_hours %></td>
            <td><%= l(activity.period_start, format: :short) %></td> <!-- l é um helper para formatar a data -->
            <td><%= activity.subscriptions_open ? 'Sim' : 'Não' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>